extends layouts/main

block content 
      .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="title", name="title", placeholder="Title", value=video.title)
            input(type="textarea", name="description", placeholder="Description",value=video.description)
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete Video